{
  "name": "angle",
  "version": "1.0.2",
  "repository": "https://github.com/MengTo/Angle-Sketch-Plugin",
  "description": "Apply perspective transforms on screen mockups. Auto-detect screens by resolution and works on shapes and symbols. Super fast.",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Angle",
    "manifest": "src/manifest.json",
    "main": "Angle.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.4.0"
  },
  "dependencies": {
    "npm": "^5.7.1",
    "skpm": "^1.0.14"
  }
}
